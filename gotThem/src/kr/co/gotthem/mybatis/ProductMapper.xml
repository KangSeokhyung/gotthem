<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
              "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
              
<mapper namespace="kr.co.gotthem.mybatis.ProductMapper">

	<select id="productList" resultType="kr.co.gotthem.product.bean.ProductBean">
		select * from product
	</select>
 <!-- 01. 상품 전체 목록 -->
    <select id="listProduct" resultType="kr.co.gotthem.product.bean.ProductBean">
        select * from product ORDER BY pro_name
    </select>
    <!-- 02. 상품 상세보기 -->
    <select id="detailProduct" resultType="kr.co.gotthem.product.bean.ProductBean">
       select * from product 
        WHERE pro_code = #{pro_code}
    </select>


</mapper>
