<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd">

	<!-- 검사 URL -->
	<http use-expressions="true">
		<intercept-url pattern="/" access="permitAll" />
		<intercept-url pattern="/mypage.gt" access="hasAnyRole('USER, ADMIN')" />
		<intercept-url pattern="/test.gt" access="hasAnyRole('USER, ADMIN')" />
		<form-login login-page="/login.gt"
                    default-target-url="/"
                    
                    authentication-success-handler-ref="loginSuccessHandler"
                    authentication-failure-handler-ref="loginFailureHandler"
                    username-parameter="mem_id"
                    password-parameter="mem_pw" />
       			 <logout logout-url="/logout"
                logout-success-url="/" />
                <csrf disabled="true"/>
	</http>

	<!-- 성공 실패 핸들러 -->
    <beans:bean id="loginSuccessHandler" class="kr.co.gotthem.member.security.LoginSuccessHandler"></beans:bean>
	<beans:bean id="loginFailureHandler" class="kr.co.gotthem.member.security.LoginFailureHandler"></beans:bean>
	
	<beans:bean id="userDetailsService" class="org.springframework.security.core.userdetails.jdbc.JdbcDaoImpl"> 
		<beans:property name="dataSource" ref="dataSource" /> 
	</beans:bean> 


	<!-- provider -->
    <authentication-manager>
        <authentication-provider>
        <jdbc-user-service 
            data-source-ref="dataSource"
            role-prefix=""
            users-by-username-query="select mem_id, mem_pw, mem_grade from member where mem_id = ?"
            authorities-by-username-query="select mem_id, mem_grade from member where mem_id = ?"      
        />
        </authentication-provider>
    </authentication-manager>

</beans:beans>